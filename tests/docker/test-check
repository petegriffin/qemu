. common.rc

cd "$BUILD_DIR"

DEF_TARGET_LIST="s390x-softmmu"
TARGET_LIST=${TARGET_LIST:-$DEF_TARGET_LIST} \
build_qemu

for i in `seq 1 1000`
do
    echo "Run: $i"
    make check-qtest-s390x
    echo "Result: $?"
done
